pipeline {
    agent any

    stages {       
        stage("Build") {
            agent {
                docker { 
                    image 'node:18-alpine'
                    reuseNode true          // share workspace across agents
                    }
            }
            steps {
                sh """
                    echo "Running Build Stage"
                    ls -la
                    node --version
                    npm --version
                    npm ci         # install dependencies in package.json (ci version)
                    npm run build
                    ls -la build
                """
            }
        }
        stage("Test") {
            agent {
                docker { 
                    image 'node:18-alpine'
                    reuseNode true          // share workspace across agents
                    }
            }
            steps {
                sh """
                    echo "Running Test Stage"
                    ls -la
                    test -f build/grep index.html
                    npm test
                """
            }
        }
    }
    post {
        always{
            junit "test-results/junit.xml" // publish the junit test report
        }
    }
}
